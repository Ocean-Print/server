{
	"compilerOptions": {
		"lib": ["es2023"],
		"module": "node16",
		"target": "es2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"typeRoots": ["node_modules/@types", "src/types"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"outDir": "./dist",
		"declaration": true
	},
	"include": ["./src/**/*.ts"]
}
